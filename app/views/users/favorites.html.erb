<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
    </div>
    
    <ul class="user-tabs">
      <li><%= link_to("投稿一覧", "/users/#{@user.id}") %><span class="fa fa-pencil"></li>
      <li class="active"><%= link_to("お気に入り", "/users/#{@user.id}/favorites") %><span class="fa fa-star notfavorite-btn"></li>
    </ul>
    
    <% @favorites.each do |favorite| %>
      <% post = Post.find_by(id: favorite.post_id) %>
      
      <div class="posts-index-item">
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
