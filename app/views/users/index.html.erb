<div class="main users-index">
  <div class="row">
    <h1 class="users-heading">ユーザー一覧</h1>
    <% @users.each do |user| %>
      <div class="users-index-item col-md-6 col-xs-12">
        <div class="user-left">
          <%= image_tag user.image.to_s %>
        </div>
        <div class="user-right">
          <%= link_to user.name, user_path(user.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>