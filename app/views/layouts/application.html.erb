<!DOCTYPE html>
<html>
  <head>
    <title>Sembang</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to "Sembang", root_path ,class: "btn btn-link"  %>
      </div>
      <ul class="header-menus">
        <% if logged_in? %>
        <div id="nav_toggle">
		 <div>
		  <span></span>
		  <span></span>
		  <span></span>
		 </div>
		</div>
		<nav>
         <li>
            <%= link_to @current_user.name, user_path(@current_user.id) %>
          </li>
         <li>
          <%= link_to "投稿一覧", posts_path %>
         </li>
         <li>
          <%= link_to "お気に入り", favorite_path(current_user.id), method: :GET %>
         </li>
         <li>
            <%= link_to "ユーザー一覧", users_path %>
         </li>
         <li>
          <%= link_to "新規投稿", new_post_path %>
         </li>
         <li>
          <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
         </li>
        </nav>
        <% else %>
         <div id="nav_toggle">
		  <div>
		   <span></span>
		   <span></span>
		   <span></span>
		  </div>
		 </div>
		 <nav>
         <li>
          <%= link_to "Sembangとは", about_path %>
         </li>
         <li>
          <%= link_to "ユーザー登録", new_user_path %>
         </li>
         <li>
          <%= link_to "ログイン", new_session_path %>
         </li>
         </nav>
        <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
